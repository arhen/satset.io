{
  "name": "satset.io",
  "version": "1.0.0",
  "module": "src/index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "concurrently -n frontend,backend -c blue,green \"bun run dev:frontend\" \"bun run dev:backend\"",
    "dev:frontend": "bun run src/index.ts",
    "dev:backend": "wrangler dev --env dev",
    "build": "bun run scripts/build.ts",
    "start": "./server",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "db:init": "wrangler d1 execute url-shortener-db --local --file=src/db/schema.sql",
    "db:migrate": "wrangler d1 execute url-shortener-db --file=src/db/schema.sql",
    "deploy": "bun run build && wrangler deploy"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "@cloudflare/workers-types": "^4.20250620.0",
    "@tailwindcss/postcss": "^4.1.18",
    "@tanstack/router-cli": "^1.143.11",
    "@types/bun": "latest",
    "@types/qrcode": "^1.5.6",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "bun-plugin-tailwind": "^0.1.2",
    "concurrently": "^9.1.2",
    "postcss-cli": "^11.0.1",
    "wrangler": "^4.22.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@elysiajs/cors": "^1.3.2",
    "@elysiajs/static": "^1.4.7",
    "@hookform/resolvers": "^5.2.2",
    "@tanstack/react-query": "^5.90.12",
    "@tanstack/react-router": "^1.141.6",
    "clsx": "^2.1.1",
    "elysia": "^1.4.19",
    "framer-motion": "^12.23.26",
    "qrcode": "^1.5.4",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-hook-form": "^7.68.0",
    "tailwindcss": "4",
    "zod": "^4.2.1"
  }
}
